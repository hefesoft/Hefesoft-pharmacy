<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/template_panel_imagen"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/image_medic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >
           
            <TextView
                android:id="@+id/template_panel_nombres"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_light"                
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/template_panel_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"                                
                />
            
            <TextView
                android:id="@+id/template_panel_telefonos"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"                                
                />
            
            <TextView
                android:id="@+id/template_panel_direccion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"                                
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>